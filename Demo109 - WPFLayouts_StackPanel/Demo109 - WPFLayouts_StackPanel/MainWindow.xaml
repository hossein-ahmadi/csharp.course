<Window x:Class="Demo109___WPFLayouts_StackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo109___WPFLayouts_StackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FlowDirection="RightToLeft">
    <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
        <Button Height="40" Width="130" Margin="10">Yes</Button>
        <Button Height="40" Width="130" Margin="0,5,10,5">No</Button>
        <Button Height="40" Width="130" Margin="0,5,5,5">Cancel</Button>
    </StackPanel>
</Window>
