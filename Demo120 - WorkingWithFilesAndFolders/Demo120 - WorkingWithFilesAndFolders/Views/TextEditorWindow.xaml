<Window x:Class="Demo120___WorkingWithFilesAndFolders.Views.TextEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo120___WorkingWithFilesAndFolders.Views"
        mc:Ignorable="d"
        Title="TextEditorWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Loaded="TextEditorWindow_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="5" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Name="EditorTextBox">

        </TextBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="100" Margin="5" Height="40" Name="CancelButton" Click="CancelButton_OnClick">Cancel</Button>
            <Button Width="100" Margin="5" Height="40" Name="SaveButton" Click="SaveButton_OnClick">Save</Button>
        </StackPanel>
    </Grid>
</Window>
