<Window x:Class="Demo116___WPFLayouts_Other.GridSplitterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo116___WPFLayouts_Other"
        mc:Ignorable="d"
        Title="GridSplitterWindow" Height="450" Width="800">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0">Button</Button>
        <Button Grid.Row="0" Grid.Column="1">Button</Button>
        <Button Grid.Row="1" Grid.Column="0">Button</Button>
        <Button Grid.Row="1" Grid.Column="1">Button</Button>
        <!-- <GridSplitter Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="3" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"></GridSplitter> -->
        <GridSplitter Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Width="3"></GridSplitter>
    </Grid>
</Window>
