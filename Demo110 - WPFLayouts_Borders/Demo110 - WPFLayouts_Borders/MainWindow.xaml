<Window x:Class="Demo110___WPFLayouts_Borders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo110___WPFLayouts_Borders"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border Margin="10" Padding="10" Width="150" HorizontalAlignment="Left" Background="Purple" BorderBrush="Purple" BorderThickness="1" CornerRadius="10">
            <StackPanel>
                <Button Height="50" Background="Transparent" BorderThickness="0" Foreground="White">Item1</Button>
                <Button Height="50" Background="Transparent" BorderThickness="0" Foreground="White">Item2</Button>
                <Button Height="50" Background="Transparent" BorderThickness="0" Foreground="White">Item3</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>